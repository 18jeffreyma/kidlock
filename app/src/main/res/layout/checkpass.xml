<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/checkpass"
    tools:context="com.intel.location.indoor.app.indoorlocationsimple.setPassword"
    android:background="@color/white">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Enter in PIN to unlock child:"
        android:id="@+id/passD"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="20mm"
        android:textSize="4mm"
        android:background="@android:color/transparent"/>

    <EditText
        android:layout_width="wrap_content"
        android:hint="PIN"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:ems="5"
        android:id="@+id/checkPin"
        android:layout_below="@+id/passD"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        android:maxLength="8"
        android:textSize="5mm"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   Submit Passcode   "
        android:id="@+id/submitCheck"
        android:layout_below="@id/checkPin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20mm"
        android:background="?android:attr/selectableItemBackground"
        android:textSize="4mm"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   Go Back   "
        android:id="@+id/retur"
        android:layout_below="@+id/submitCheck"
        android:layout_centerHorizontal="true"
        android:background="?android:attr/selectableItemBackground"
        android:textSize="4mm"/>
</RelativeLayout>
